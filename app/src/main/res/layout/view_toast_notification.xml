<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/toast_horizontal_margin"
    android:paddingEnd="@dimen/toast_horizontal_margin">

    <com.konami.ailens.main.CutCornerView
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerCut="@dimen/toast_corner_cut"
        app:borderWidth="@dimen/toast_border_width"
        app:borderColor="?attr/appBorderMediumGray"
        app:fillColor="?attr/appSurface1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toast_min_height"
            android:paddingStart="@dimen/toast_content_padding_start"
            android:paddingEnd="@dimen/toast_content_padding_end"
            android:paddingTop="@dimen/toast_content_padding_vertical"
            android:paddingBottom="@dimen/toast_content_padding_vertical">

            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="@dimen/toast_icon_size"
                android:layout_height="@dimen/toast_icon_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:src="@drawable/ic_toast_success"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/toast_message_margin_start"
                app:layout_constraintStart_toEndOf="@id/iconImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toast_message_text_size"
                style="@style/Medium"
                android:includeFontPadding="false"
                tools:text="Toast message here" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.konami.ailens.main.CutCornerView>

</FrameLayout>
