<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackground"
    android:fitsSystemWindows="true"
    tools:ignore="ContentDescription">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_add_device_bg" />
    
    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/add_device_glasses_top_margin"
        app:layout_constraintDimensionRatio="1500:1719"
        android:src="@drawable/img_add_device_glasses" />

    <TextView
        android:layout_width="@dimen/add_device_direction_width"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        android:layout_marginBottom="@dimen/add_device_direction_margin_bottom"
        android:textColor="?attr/appTextPrimary"
        android:textSize="@dimen/add_device_direction_text_size"
        android:gravity="center"
        style="@style/SemiBold"
        android:lineSpacingMultiplier="1.5"
        android:text="@string/add_device_direction_1" />

    <FrameLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/add_device_button_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/add_device_button_margin_horizontal"
        android:layout_marginBottom="@dimen/add_device_button_margin_bottom">

        <com.konami.ailens.main.CutCornerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cornerCut="@dimen/add_device_button_corner_cut"
            app:fillColor="?attr/appPrimary" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="@string/add_device"
            android:textColor="?attr/appTextButton"
            style="@style/Bold"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>