<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.konami.ailens.main.CutCornerView
            android:id="@+id/cutCornerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerCut="@dimen/nav_bottom_corner_cut"
            app:fillColor="?attr/appBackground"
            app:borderWidth="@dimen/nav_bottom_border_width"
            app:borderColor="@color/app_border_dark_gray"
            app:cutCorners="topLeft|topRight" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="@dimen/nav_bottom_padding_top"
            android:paddingHorizontal="@dimen/nav_bottom_padding_horizontal"
            android:paddingBottom="@dimen/nav_bottom_padding_bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SemiBold"
                    android:textSize="@dimen/nav_bottom_time_number_text_size"
                    android:text="15min"
                    android:textColor="?attr/appTextPrimary" />

                <TextView
                    android:id="@+id/distanceETATextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/nav_bottom_distance_eta_text_size"
                    android:textColor="?attr/appTextSecondary"
                    android:text="1.2 km Â· 6:42 PM " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/nav_bottom_image_button_size"
                    android:layout_height="@dimen/nav_bottom_image_button_size"
                    android:layout_marginEnd="@dimen/nav_bottom_button_spacing">

                    <com.konami.ailens.main.CutCornerView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:borderColor="#00000000"
                        app:fillColor="?attr/appGrey01" />

                    <ImageView
                        android:layout_width="@dimen/nav_bottom_image_button_image_size"
                        android:layout_height="@dimen/nav_bottom_image_button_image_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_nav_route" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/nav_bottom_image_button_size"
                    android:clickable="true"
                    android:focusable="true">

                    <com.konami.ailens.main.CutCornerView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:borderColor="#00000000"
                        app:fillColor="?attr/appRectangle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/nav_bottom_button_text_padding_horizontal"
                        android:textSize="@dimen/nav_bottom_button_text_size"
                        android:textColor="?attr/appTextButton"
                        android:text="@string/exit"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        style="@style/Bold" />

                    <Button
                        android:id="@+id/exitButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="#00000000" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>