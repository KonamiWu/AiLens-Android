<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:background="?attr/appBackground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1500:874"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_nav_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/okImageView"
            android:layout_width="@dimen/connected_successfully_icon_size"
            android:layout_height="@dimen/connected_successfully_icon_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/connected_successfully_icon_margon_top"
            android:src="@drawable/ic_connection_ok" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/okImageView"
            android:layout_marginTop="@dimen/connected_successfully_text1_margin_top"
            android:layout_marginHorizontal="@dimen/connected_successfully_text1_margin_horizontal"
            android:textSize="@dimen/connected_successfully_text1_size"
            android:text="@string/connected_successfully_text1"
            android:textColor="?attr/appTextPrimary"
            style="@style/SemiBold"
            android:gravity="center" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1"
            android:layout_marginTop="@dimen/connected_successfully_text2_margin_top"
            android:layout_marginHorizontal="@dimen/connected_successfully_text1_margin_horizontal"
            android:textSize="@dimen/connected_successfully_text2_size"
            android:text="@string/connected_successfully_text2_1"
            android:textColor="?attr/appTextPrimary"
            style="@style/Regular"
            android:gravity="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="343:100"
            app:layout_constraintTop_toBottomOf="@id/text2"
            android:layout_marginTop="@dimen/connected_successfully_glasses_margin_top"
            android:layout_marginHorizontal="@dimen/connected_successfully_glasses_margin_horizontal">

            <ImageView
                android:id="@+id/bgImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="343:100"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/img_device_list_item_bg" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/bgImageView"
                app:layout_constraintTop_toTopOf="@id/bgImageView"
                app:layout_constraintEnd_toEndOf="@id/bgImageView"
                app:layout_constraintBottom_toBottomOf="@id/bgImageView"
                android:paddingHorizontal="@dimen/device_list_item_padding_horizontal"
                android:background="@drawable/device_list_item_background">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="?attr/appTextPrimary"
                    android:text="AiLens 01A2"
                    android:textSize="@dimen/device_list_item_name_text_size"
                    style="@style/SemiBold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rotateLayout"
                    android:layout_width="@dimen/device_list_item_rotate_layout_size"
                    android:layout_height="@dimen/device_list_item_rotate_layout_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.konami.ailens.main.CutCornerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cornerCut="@dimen/device_list_item_rotate_corner_cut"
                        app:fillColor="?attr/appPrimary" />

                    <ImageView
                        android:layout_width="@dimen/connected_successfully_small_icon_size"
                        android:layout_height="@dimen/connected_successfully_small_icon_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_connected_successfully_ok_little" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>