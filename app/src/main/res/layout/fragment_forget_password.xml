<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5:8"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_nav_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navBackLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/navBackButton"
            android:layout_width="@dimen/nav_back_button_size"
            android:layout_height="@dimen/nav_back_button_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/forget_password_nav_back_margin_start"
            android:src="@drawable/ic_nav_back"
            android:background="@android:color/transparent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/sign_up_padding">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/forget_password_title_margin_top"
                android:text="@string/forget_password"
                android:textColor="?attr/appPrimary"
                style="@style/SemiBold"
                android:includeFontPadding="false"
                android:textSize="@dimen/sign_up_title_text_size" />

            <TextView
                android:id="@+id/hintTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                android:layout_marginTop="8dp"
                android:text="@string/forget_password_hint"
                android:textColor="?attr/appTextSecondary"
                style="@style/Regular"
                android:includeFontPadding="false"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hintTextView"
                android:layout_marginTop="@dimen/sign_up_edit_text_margin_top"
                android:autofillHints="emailAddress"
                android:includeFontPadding="false"
                android:hint="@string/email"
                android:textColorHint="?attr/appTextPlaceholder"
                style="@style/Regular"
                android:textSize="@dimen/sign_up_edit_text_size"
                android:textColor="?attr/appTextPrimary"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/emailErrorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/emailEditText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/sign_up_edit_text_invalid_hint_margin_left"
                style="@style/Regular"
                android:includeFontPadding="false"
                android:text="@string/email_invalid_hint"
                android:textColor="?attr/appRed"
                android:textSize="@dimen/sign_up_hint_text_size"
                android:alpha="0" />

            <com.konami.ailens.main.CutCornerView
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_bottom_button_height"
                app:layout_constraintTop_toBottomOf="@id/emailEditText"
                android:layout_marginTop="@dimen/sign_up_big_button_margin_top"
                app:cornerCut="@dimen/big_bottom_button_corner_cut"
                app:borderWidth="0dp"
                app:borderColor="@android:color/transparent"
                app:fillColor="?attr/appButtonDisable">

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="?attr/appTextDisable"
                    android:textSize="@dimen/big_bottom_button_text_size"
                    style="@style/Bold"
                    android:includeFontPadding="false"
                    android:text="@string/next" />

            </com.konami.ailens.main.CutCornerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
