<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackground"
    android:paddingHorizontal="@dimen/favorite_edit_padding_horizontal"
    android:paddingTop="@dimen/favorite_edit_padding_top">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="@dimen/nav_back_button_size"
        android:layout_height="@dimen/nav_back_button_size"
        android:src="@drawable/ic_nav_back"
        android:background="#00000000"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Address Input Layout with overlapping icon -->
    <FrameLayout
        android:id="@+id/addressInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/favorite_edit_text_layout_margin_left"
        android:layout_marginEnd="@dimen/favorite_edit_padding_horizontal"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/backButton">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addressTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCollapsedPaddingTop="0dp"
            app:boxBackgroundMode="filled"
            android:background="#00000000"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/location_picker_edit_text_bg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="?attr/appTextPrimary"
                android:hint="Set your home address"
                android:padding="0dp"
                android:paddingStart="@dimen/favorite_edit_input_text_padding_left"
                android:paddingEnd="@dimen/favorite_edit_input_text_padding_right"
                android:lines="1"
                android:textCursorDrawable="@null"
                style="@style/Medium"
                android:textColorHint="?attr/appTextPlaceholder"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Icon overlapping on EditText -->
        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="@dimen/favorite_edit_icon_size"
            android:layout_height="@dimen/favorite_edit_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/favorite_edit_icon_margin_left"
            android:layout_marginBottom="@dimen/favorite_edit_icon_margin_bottom"
            android:src="@drawable/ic_favorite_list_home_active"/>

    </FrameLayout>

    <!-- AutoComplete RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/autoCompleteRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/favorite_edit_recycle_view_margin_top"
        app:layout_constraintTop_toBottomOf="@id/addressInputLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>
