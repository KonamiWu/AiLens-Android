<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/language_selection_item_height"
    android:paddingHorizontal="@dimen/language_selection_item_padding_horizontal"
    tools:ignore="ContentDescription"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/checkImageView"
        android:layout_width="@dimen/language_selection_item_check_size"
        android:layout_height="@dimen/language_selection_item_check_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_check" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/checkImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/language_selection_item_title_margin_start"
        android:textSize="@dimen/language_selection_item_text_size"
        android:textColor="?attr/appPrimary"
        style="@style/Medium" />



</androidx.constraintlayout.widget.ConstraintLayout>