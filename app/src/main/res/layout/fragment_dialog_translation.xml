<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/navBgImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1500:874"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_nav_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_height"
            android:fitsSystemWindows="true"
            android:paddingHorizontal="@dimen/smart_translation_padding_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two_way_translation"
                android:textColor="?attr/appTextPrimary"
                android:textSize="@dimen/nav_title_text_size"
                style="@style/SemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <FrameLayout
                android:layout_width="@dimen/nav_back_button_size"
                android:layout_height="@dimen/nav_back_button_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000" />

                <ImageView
                    android:layout_width="@dimen/smart_translation_nav_back_icon_size"
                    android:layout_height="@dimen/smart_translation_nav_back_icon_size"
                    android:layout_gravity="center"
                    android:src="@drawable/interpretation_language_done" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/navLayout"
            app:layout_constraintBottom_toTopOf="@id/buttonLayout"
            android:layout_marginTop="@dimen/dialog_translation_content_margin_top"
            android:layout_marginHorizontal="@dimen/dialog_translation_content_margin_horizontal"
            android:layout_marginBottom="@dimen/dialog_translation_content_margin_bottom">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/buttonLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/add_device_button_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="@dimen/add_device_button_margin_horizontal"
            android:layout_marginBottom="@dimen/add_device_button_margin_bottom">

            <com.konami.ailens.main.CutCornerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cornerCut="@dimen/add_device_button_corner_cut"
                app:fillColor="?attr/appPrimary" />

            <Button
                android:id="@+id/actionButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                style="@style/Bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/micImageView"
                        android:layout_width="@dimen/dialog_translation_action_icon_size"
                        android:layout_height="@dimen/dialog_translation_action_icon_size"
                        android:src="@drawable/ic_translation_mic" />

                    <com.konami.ailens.translation.WaveView
                        android:id="@+id/waveView"
                        android:layout_width="@dimen/dialog_translation_action_icon_size"
                        android:layout_height="@dimen/dialog_translation_action_icon_size"
                        app:waveBackgroundColor="?attr/appTextButton"
                        app:dotSpacing="@dimen/dialog_translation_wave_dot_spacing"
                        app:dotSize="@dimen/dialog_translation_wave_dot_size" />

                </FrameLayout>

                <TextView
                    android:id="@+id/buttonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dialog_translation_button_text_margin_left"
                    android:text="@string/pause"
                    android:textSize="@dimen/dialog_translation_button_text_size"
                    android:textColor="@color/app_text_button"
                    style="@style/Bold" />
            </LinearLayout>

        </FrameLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>