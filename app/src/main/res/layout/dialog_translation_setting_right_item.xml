<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dialog_translation_setting_item_margin_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.konami.ailens.main.CutCornerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:borderColor="#00000000"
            app:fillColor="?attr/appSurface1"
            app:fillColorAlpha="0.5"
            app:cutCorners="topLeft|topRight|bottomLeft"
            app:cornerCut="@dimen/dialog_translation_item_corner_cut">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_translation_setting_phone_bg" />

        </com.konami.ailens.main.CutCornerView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="@dimen/dialog_translation_setting_item_padding_horizontal"
            android:paddingVertical="@dimen/dialog_translation_setting_item_padding_vertical">

            <FrameLayout
                android:id="@+id/iconContainer"
                android:layout_width="@dimen/dialog_translation_setting_item_icon_container_width"
                android:layout_height="@dimen/dialog_translation_setting_item_icon_container_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/dialog_translation_setting_icon_bg">

                <ImageView
                    android:layout_width="@dimen/dialog_translation_setting_item_icon_size"
                    android:layout_height="@dimen/dialog_translation_setting_item_icon_size"
                    android:src="@drawable/ic_translation_setting_phone"
                    android:layout_gravity="center" />

            </FrameLayout>

            <TextView
                android:id="@+id/sourceLanguageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iconContainer"
                app:layout_constraintBottom_toBottomOf="@id/iconContainer"
                app:layout_constraintStart_toEndOf="@id/iconContainer"
                android:layout_marginStart="@dimen/dialog_translation_setting_item_language_margin_start"
                android:textSize="@dimen/dialog_translation_setting_item_language_text_size"
                android:textColor="?attr/appTextPrimary"
                android:text="English"
                style="@style/SemiBold" />
            
            <ImageView
                android:id="@+id/downArrow"
                android:layout_width="@dimen/dialog_translation_setting_item_down_arrow_size"
                android:layout_height="@dimen/dialog_translation_setting_item_down_arrow_size"
                app:layout_constraintTop_toTopOf="@id/sourceLanguageTextView"
                app:layout_constraintBottom_toBottomOf="@id/sourceLanguageTextView"
                app:layout_constraintStart_toEndOf="@id/sourceLanguageTextView"
                android:layout_marginStart="@dimen/dialog_translation_setting_item_language_margin_start"
                android:src="@drawable/ic_translation_down_arrow" />

            <Button
                android:id="@+id/languageButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/iconContainer"
                app:layout_constraintTop_toTopOf="@id/iconContainer"
                app:layout_constraintBottom_toBottomOf="@id/iconContainer"
                app:layout_constraintEnd_toEndOf="@id/downArrow"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sourceLanguageTextView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dialog_translation_setting_item_title_margin_top"
                android:text="Phone"
                android:textSize="@dimen/dialog_translation_setting_item_title_text_size"
                android:textColor="?attr/appTextPrimary"
                style="@style/SemiBold" />

            <TextView
                android:id="@+id/infoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/dialog_translation_setting_item_info_margin_top"
                android:textColor="?attr/appTextPrimary"
                style="@style/Regular"
                android:textSize="@dimen/dialog_translation_setting_item_info_text_size"
                android:text="Your spoken words will appear on the right side, and the translated version will be sent to the person wearing the glasses."
                android:lineSpacingMultiplier="1.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>