<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5:8"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_nav_bg" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_height"
            android:paddingHorizontal="@dimen/smart_translation_padding_horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleTextView"
                style="@style/SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interpretation"
                android:textColor="?attr/appTextPrimary"
                android:textSize="@dimen/smart_translation_title_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:layout_width="@dimen/nav_back_button_size"
                android:layout_height="@dimen/nav_back_button_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000" />

                <ImageView
                    android:layout_width="@dimen/smart_translation_nav_back_icon_size"
                    android:layout_height="@dimen/smart_translation_nav_back_icon_size"
                    android:layout_gravity="center"
                    android:src="@drawable/interpretation_language_done" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/languageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/navLayout"
            android:layout_marginTop="@dimen/interpretation_language_text_margin_top">

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="@dimen/interpretation_language_arrow_size"
                android:layout_height="@dimen/interpretation_language_arrow_size"
                android:src="@drawable/ic_interpretation_language_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/sourceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/interpretation_language_text_spacing"
                android:text="English"
                android:textSize="@dimen/interpretation_language_text_size"
                android:textColor="?attr/appTextPlaceholder"
                style="@style/Medium" />

            <TextView
                android:id="@+id/targetTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/interpretation_language_text_spacing"
                android:text="English"
                android:textSize="@dimen/interpretation_language_text_size"
                android:textColor="?attr/appTextPlaceholder"
                style="@style/Medium" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/languageLayout"
            app:layout_constraintBottom_toTopOf="@id/waveView"
            android:layout_marginTop="@dimen/device_list_item_recycler_view_margin_top"
            android:layout_marginBottom="@dimen/interpretation_recycler_view_margin_bottom"/>

        <com.konami.ailens.translation.WaveView
            android:id="@+id/waveView"
            android:layout_width="@dimen/interpretation_wave_size"
            android:layout_height="@dimen/interpretation_wave_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/interpretation_wave_dot_margin_bottom"
            app:waveBackgroundColor="?attr/appSurface1"
            app:dotColor="?attr/appPrimary"
            app:dotSpacing="@dimen/interpretation_wave_dot_spacing" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>