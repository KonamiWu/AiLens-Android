<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/setting_item_padding_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/setting_list_icon_size"
            android:layout_height="@dimen/setting_list_icon_size"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/setting_list_item_title_margin_start"
            android:textSize="@dimen/setting_item_text_size"
            android:textColor="?attr/appTextPrimary" />

        <com.konami.ailens.view.AnimatedSwitch
            android:id="@+id/switchToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/automaticBrightnessTitleTextView"
        android:layout_marginTop="@dimen/setting_slider_margin_top"
        android:max="100"
        android:progress="50"
        android:thumb="@drawable/custom_slider_thumb"
        android:progressDrawable="@drawable/custom_slider_track"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:minHeight="@dimen/setting_slider_track_height"
        android:maxHeight="@dimen/setting_slider_track_height"
        android:splitTrack="false"/>

</LinearLayout>
