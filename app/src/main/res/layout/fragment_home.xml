<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_background_circuit" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="375:492"
        android:scaleType="fitCenter"
        android:src="@drawable/img_main_bg_top" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="375:319"
        android:scaleType="fitCenter"
        android:src="@drawable/img_main_bg_bottom" />

    <ImageView
        android:id="@+id/glassesImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/main_img_glass_margin_top"
        app:layout_constraintDimensionRatio="375:268"
        android:scaleType="fitXY"
        android:src="@drawable/img_main_glasses"
        android:alpha="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:fitsSystemWindows="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainTopLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/main_top_section_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/main_top_section_margin_top"
            android:paddingHorizontal="@dimen/main_top_section_padding_horizontal">
            
            <com.konami.ailens.main.DashedLineView
                android:layout_width="@dimen/main_dash_size"
                android:layout_height="@dimen/main_left_dash_length"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/main_left_dash_margin_top"
                app:dashLength="@dimen/main_dash_length"
                app:dashSpacing="@dimen/main_dash_spacing"
                app:lineWidth="@dimen/main_dash_line_width"
                app:lineColor="?attr/appBorderLightGray"
                app:orientation="vertical" />

            <com.konami.ailens.main.DashedLineView
                android:layout_width="@dimen/main_dash_size"
                android:layout_height="@dimen/main_right_dash_length"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/main_right_dash_margin_top"
                app:dashLength="@dimen/main_dash_length"
                app:dashSpacing="@dimen/main_dash_spacing"
                app:lineWidth="@dimen/main_dash_line_width"
                app:lineColor="?attr/appBorderLightGray"
                app:orientation="vertical" />

            <com.konami.ailens.main.DashedLineView
                android:layout_width="@dimen/main_bottom_dash_length"
                android:layout_height="@dimen/main_dash_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:dashLength="@dimen/main_dash_length"
                app:dashSpacing="@dimen/main_dash_spacing"
                app:lineWidth="@dimen/main_dash_line_width"
                app:lineColor="?attr/appBorderMediumGray"
                app:orientation="horizontal" />

            <ImageView
                android:layout_width="@dimen/main_img_bottom_left_line_size"
                android:layout_height="@dimen/main_img_bottom_left_line_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/img_main_bottom_left_line" />

            <ImageView
                android:layout_width="@dimen/main_img_bottom_left_line_size"
                android:layout_height="@dimen/main_img_bottom_left_line_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/img_main_top_right_line" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/main_name_margin_left"
                android:layout_marginTop="@dimen/main_name_margin_top"
                android:textSize="@dimen/main_name_text_size"
                android:textColor="?attr/appPrimary"
                android:includeFontPadding="false"
                android:text="AiLens 01A2"
                style="@style/SemiBold" />

            <com.konami.ailens.main.CutCornerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/settingLayout"
                app:layout_constraintTop_toTopOf="@id/settingLayout"
                app:layout_constraintEnd_toEndOf="@id/settingLayout"
                app:layout_constraintBottom_toBottomOf="@id/settingLayout"
                app:borderWidth="@dimen/main_cut_corner_view_border_width"
                app:borderColor="?attr/appPrimary"
                app:cornerCut="@dimen/main_cut_corner_view_corner_cut" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/settingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/main_setting_margin_start"
                android:layout_marginBottom="@dimen/main_setting_margin_bottom"
                android:paddingHorizontal="@dimen/main_setting_padding_horizontal"
                android:paddingVertical="@dimen/main_setting_padding_vertical">

                <Button
                    android:id="@+id/settingButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#00000000"/>

                <ImageView
                    android:id="@+id/settingImageView"
                    android:layout_width="@dimen/main_setting_icon_size"
                    android:layout_height="@dimen/main_setting_icon_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_main_setting" />

                <TextView
                    android:id="@+id/settingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/settingImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/main_setting_spacing"
                    android:textSize="@dimen/main_setting_text_size"
                    android:textColor="?attr/appPrimary"
                    style="@style/SemiBold"
                    android:text="Settings" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/batteryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/main_battery_text_margin_top"
                android:layout_marginEnd="@dimen/main_battery_text_margin_right"
                android:textSize="@dimen/main_battery_text_size"
                android:textColor="?attr/appBorderLightGray"
                style="@style/Medium"
                android:text="100%"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/batteryImageView"
                android:layout_width="@dimen/main_battery_size"
                android:layout_height="@dimen/main_battery_size"
                app:layout_constraintTop_toTopOf="@id/batteryTextView"
                app:layout_constraintEnd_toStartOf="@id/batteryTextView"
                app:layout_constraintBottom_toBottomOf="@id/batteryTextView"
                android:layout_marginEnd="@dimen/main_battery_margin_end"
                android:visibility="invisible"
                android:src="@drawable/ic_battery_100" />

            <ImageView
                android:id="@+id/infoImageView"
                android:layout_width="@dimen/home_disconnect_info_icon_size"
                android:layout_height="@dimen/home_disconnect_info_icon_size"
                android:src="@drawable/ic_info"
                app:layout_constraintTop_toTopOf="@id/diconnectedTextView"
                app:layout_constraintEnd_toStartOf="@id/diconnectedTextView"
                app:layout_constraintBottom_toBottomOf="@id/diconnectedTextView"
                android:layout_marginEnd="@dimen/home_info_icon_margin_right" />

            <TextView
                android:id="@+id/diconnectedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/main_battery_text_margin_top"
                android:layout_marginEnd="@dimen/main_battery_text_margin_right"
                android:textSize="@dimen/main_battery_text_size"
                android:textColor="?attr/appTextSecondary"
                style="@style/SemiBold"
                android:text="@string/disconnected" />

            <FrameLayout
                android:layout_width="@dimen/main_tab_other_device_size"
                android:layout_height="@dimen/main_tab_other_device_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/main_tab_other_device_margin_top"
                android:layout_marginEnd="@dimen/main_tab_other_device_margin_right">

                <com.konami.ailens.main.CutCornerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@id/settingLayout"
                    app:layout_constraintTop_toTopOf="@id/settingLayout"
                    app:layout_constraintEnd_toEndOf="@id/settingLayout"
                    app:layout_constraintBottom_toBottomOf="@id/settingLayout"
                    app:borderWidth="@dimen/main_cut_corner_view_border_width"
                    app:borderColor="?attr/appPrimary"
                    app:cornerCut="@dimen/main_cut_corner_view_corner_cut" />

                <ImageView
                    android:layout_width="@dimen/main_tab_other_device_icon_size"
                    android:layout_height="@dimen/main_tab_other_device_icon_size"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_main_other_device" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/disconnectLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mainTopLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/home_disconnect_text1_size"
                    android:text="@string/home_disconnect1"
                    android:textColor="?attr/appTextPrimary"
                    android:gravity="center"
                    style="@style/SemiBold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/home_disconnect_text2_size"
                    android:text="@string/home_disconnect2"
                    android:textColor="?attr/appTextPrimary"
                    style="@style/Regular" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/functionLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mainTopLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible">

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="?attr/appBorderDarkGray" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/divider"
                app:layout_constraintEnd_toStartOf="@id/divider"
                android:layout_marginTop="@dimen/main_function_left_margin_top"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/navigationImageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="58:60"
                    android:layout_marginHorizontal="@dimen/main_function_item_margin_horizontal"
                    android:src="@drawable/ic_main_navigation" />

                <TextView
                    android:id="@+id/navigationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/navigationImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/main_function_item_text_size"
                    android:textColor="?attr/appPrimaryDark"
                    android:text="Navigation"
                    style="@style/SemiBold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/main_function_small_margin_top" />

                <Button
                    android:id="@+id/navigationButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/navigationImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/leftDashLine"
                    android:background="#00000000" />


                <com.konami.ailens.main.DashedLineView
                    android:id="@+id/leftDashLine"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/navigationTextView"
                    app:layout_constraintStart_toStartOf="@id/navigationImageView"
                    app:layout_constraintEnd_toEndOf="@id/navigationImageView"
                    android:layout_marginTop="@dimen/main_function_large_margin_top"
                    app:orientation="horizontal"
                    app:dashLength="@dimen/main_dash_length"
                    app:dashSpacing="@dimen/main_dash_spacing"
                    app:lineWidth="@dimen/main_dash_line_width"
                    app:lineColor="?attr/appBorderMediumGray" />

                <ImageView
                    android:id="@+id/teleprompterImageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/leftDashLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/main_function_small_margin_top"
                    app:layout_constraintDimensionRatio="64:62"
                    android:layout_marginHorizontal="@dimen/main_function_item_margin_horizontal"
                    android:src="@drawable/ic_main_teleprompter" />

                <TextView
                    android:id="@+id/teleprompterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/teleprompterImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/main_function_item_text_size"
                    android:textColor="?attr/appPrimaryDark"
                    android:text="Teleprompter"
                    style="@style/SemiBold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/main_function_small_margin_top" />

                <Button
                    android:id="@+id/teleprompterButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/leftDashLine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/teleprompterTextView"
                    android:background="#00000000" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/divider"
                app:layout_constraintTop_toTopOf="@id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/agentImageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="73:72"
                    android:layout_marginHorizontal="@dimen/main_function_item_margin_horizontal"
                    android:src="@drawable/ic_main_agent" />

                <TextView
                    android:id="@+id/agentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/agentImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/main_function_item_text_size"
                    android:textColor="?attr/appPrimaryDark"
                    android:text="AI Agent"
                    style="@style/SemiBold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/main_function_small_margin_top" />

                <Button
                    android:id="@+id/agentButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/agentImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/rightDashLine"
                    android:background="#00000000" />

                <com.konami.ailens.main.DashedLineView
                    android:id="@+id/rightDashLine"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/agentTextView"
                    app:layout_constraintStart_toStartOf="@id/agentImageView"
                    app:layout_constraintEnd_toEndOf="@id/agentImageView"
                    android:layout_marginTop="@dimen/main_function_large_margin_top"
                    app:orientation="horizontal"
                    app:dashLength="@dimen/main_dash_length"
                    app:dashSpacing="@dimen/main_dash_spacing"
                    app:lineWidth="@dimen/main_dash_line_width"
                    app:lineColor="?attr/appBorderMediumGray" />

                <ImageView
                    android:id="@+id/translationImageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rightDashLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/main_function_small_margin_top"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_marginHorizontal="@dimen/main_function_item_margin_horizontal"
                    android:src="@drawable/ic_main_translation" />

                <TextView
                    android:id="@+id/translationTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/translationImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="@dimen/main_function_item_text_size"
                    android:textColor="?attr/appPrimaryDark"
                    android:text="Smart Translation"
                    style="@style/SemiBold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/main_function_small_margin_top" />

                <Button
                    android:id="@+id/translationButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/rightDashLine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/translationTextView"
                    android:background="#00000000" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>