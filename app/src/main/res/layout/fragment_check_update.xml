<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/navBgImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5:8"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_nav_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_height"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="@dimen/nav_back_button_size"
                android:layout_height="@dimen/nav_back_button_size"
                android:src="@drawable/ic_nav_back"
                android:background="#00000000"
                android:contentDescription="@string/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_check_for_update"
                android:textColor="?attr/appTextPrimary"
                android:textSize="@dimen/nav_title_text_size"
                style="@style/SemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/completionLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/navigationBar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="@dimen/check_update_padding_horizontal">

            <ImageView
                android:id="@+id/completionImageView"
                android:layout_width="@dimen/check_update_completion_icon_size"
                android:layout_height="@dimen/check_update_completion_icon_size"
                android:src="@drawable/ic_check_update_completion"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/check_update_completion_icon_margin_top" />

            <TextView
                android:id="@+id/completionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/completionImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/check_update_completion_text_margin_top"
                android:text="@string/check_update_completion_text"
                android:textSize="@dimen/check_update_completion_text_size"
                android:textColor="?attr/appTextPrimary"
                style="@style/SemiBold" />

            <TextView
                android:id="@+id/completionVersionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/completionTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/check_update_completion_version_margin_top"
                android:visibility="gone"
                android:textSize="@dimen/check_update_completion_version_text_size"
                android:textColor="?attr/appTextPrimary"
                style="@style/Regular" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/navigationBar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="@dimen/check_update_padding_horizontal">

            <TextView
                android:id="@+id/versionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:includeFontPadding="false"
                android:textSize="@dimen/check_update_version_text_size"
                style="@style/SemiBold"
                android:textColor="?attr/appPrimary" />

            <TextView
                android:id="@+id/sizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/versionTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/check_update_version_size_text_size"
                android:textColor="?attr/appTextSecondary"
                android:includeFontPadding="false"
                style="@style/Regular"/>


            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/sizeTextView"
                app:layout_constraintBottom_toTopOf="@id/buttonLayout"
                android:layout_marginTop="@dimen/check_update_version_description_margin_top"
                android:textColor="?attr/appTextPrimary"
                android:textSize="@dimen/check_update_version_description_text_size"
                style="@style/Regular"
                android:lineSpacingMultiplier="1.3" />

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/add_device_button_margin_bottom"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <com.konami.ailens.main.CutCornerButton
                    android:id="@+id/updateButton"
                    android:layout_width="match_parent"
                    android:text="@string/check_update_update_now"
                    app:disableTextColor="?attr/appTextButton"
                    style="@style/PositiveBigCornerButton" />

                <com.konami.ailens.main.CutCornerButton
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/check_update_bottom_button_spacing"
                    android:text="@string/check_update_update_now"
                    style="@style/NegativeBigCornerButton" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>