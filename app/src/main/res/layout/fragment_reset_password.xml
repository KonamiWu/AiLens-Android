<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1500:874"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_nav_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/sign_up_padding">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/set_new_password"
                android:textColor="?attr/appPrimary"
                style="@style/SemiBold"
                android:includeFontPadding="false"
                android:textSize="@dimen/sign_up_title_text_size" />

            <TextView
                android:id="@+id/hintTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                android:layout_marginTop="8dp"
                android:text="@string/set_new_password_hint"
                android:textColor="?attr/appTextSecondary"
                style="@style/Regular"
                android:includeFontPadding="false"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hintTextView"
                android:layout_marginTop="@dimen/sign_up_edit_text_margin_top"
                android:paddingEnd="@dimen/sign_up_password_padding_end"
                tools:ignore="RtlSymmetry"
                android:autofillHints="password"
                android:includeFontPadding="false"
                android:hint="@string/password"
                android:textColorHint="?attr/appTextPlaceholder"
                style="@style/Regular"
                android:textSize="@dimen/sign_up_edit_text_size"
                android:textColor="?attr/appTextPrimary"
                android:imeOptions="actionNext" />

            <ImageButton
                android:id="@+id/passwordEyeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="@id/passwordEditText"
                app:layout_constraintBottom_toBottomOf="@id/passwordEditText"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_eye_close" />

            <TextView
                android:id="@+id/passwordErrorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/passwordEditText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/sign_up_edit_text_invalid_hint_margin_left"
                style="@style/Regular"
                android:includeFontPadding="false"
                android:text="@string/password_error_hint"
                android:textColor="?attr/appRed"
                android:textSize="@dimen/sign_up_hint_text_size"
                android:alpha="0" />

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordEditText"
                android:layout_marginTop="@dimen/sign_up_edit_text_spacing"
                android:autofillHints="password"
                android:includeFontPadding="false"
                android:paddingEnd="@dimen/sign_up_password_padding_end"
                tools:ignore="RtlSymmetry"
                android:hint="@string/confirm_password"
                android:textColorHint="?attr/appTextPlaceholder"
                style="@style/Regular"
                android:textSize="@dimen/sign_up_edit_text_size"
                android:textColor="?attr/appTextPrimary"
                android:imeOptions="actionDone" />

            <ImageButton
                android:id="@+id/confirmPasswordEyeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="@id/confirmPasswordEditText"
                app:layout_constraintBottom_toBottomOf="@id/confirmPasswordEditText"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_eye_close" />

            <TextView
                android:id="@+id/confirmPasswordErrorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/confirmPasswordEditText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/sign_up_edit_text_invalid_hint_margin_left"
                style="@style/Regular"
                android:includeFontPadding="false"
                android:text="@string/confirm_password_error_hint"
                android:textColor="?attr/appRed"
                android:textSize="@dimen/sign_up_hint_text_size"
                android:alpha="0" />

            <com.konami.ailens.main.CutCornerView
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_bottom_button_height"
                app:layout_constraintTop_toBottomOf="@id/confirmPasswordEditText"
                android:layout_marginTop="@dimen/sign_up_big_button_margin_top"
                app:cornerCut="@dimen/big_bottom_button_corner_cut"
                app:borderWidth="0dp"
                app:borderColor="@android:color/transparent"
                app:fillColor="?attr/appButtonDisable">

                <Button
                    android:id="@+id/confirmButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="?attr/appTextDisable"
                    android:textSize="@dimen/big_bottom_button_text_size"
                    style="@style/Bold"
                    android:includeFontPadding="false"
                    android:text="@string/confirm" />

            </com.konami.ailens.main.CutCornerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
