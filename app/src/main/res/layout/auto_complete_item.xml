<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/address_picker_auto_complete_item_height"
    android:paddingHorizontal="@dimen/address_picker_auto_complete_item_padding_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="@dimen/address_picker_auto_complete_item_icon_size"
        android:layout_height="@dimen/address_picker_auto_complete_item_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_auto_complete_pin_icon"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/iconImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/address_picker_auto_complete_item_text_margin_left"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/primaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/address_picker_auto_complete_item_primary_text_size"
            android:textColor="?attr/appPrimary"
            style="@style/Regular" />

        <TextView
            android:id="@+id/secondaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/address_picker_auto_complete_item_secondary_text_size"
            android:textColor="?attr/appTextPlaceholder"
            style="@style/Regular" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>