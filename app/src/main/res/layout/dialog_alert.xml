<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="@dimen/alert_dialog_width"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.konami.ailens.main.CutCornerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/contentLayout"
            app:layout_constraintTop_toTopOf="@id/contentLayout"
            app:layout_constraintEnd_toEndOf="@id/contentLayout"
            app:layout_constraintBottom_toBottomOf="@id/contentLayout"
            app:fillColor="?attr/appBackground"
            app:cornerCut="@dimen/alert_dialog_corner_cut"
            app:borderColor="?attr/appBorderDarkGray"
            app:borderWidth="@dimen/alert_dialog_border_width" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/alert_dialog_width"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/alert_dialog_padding_top"
            android:paddingHorizontal="@dimen/alert_dialog_padding_horizontal"
            android:paddingBottom="@dimen/alert_dialog_padding_bottom">

            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="@dimen/alert_dialog_icon_size"
                android:layout_height="@dimen/alert_dialog_icon_size"
                android:src="@drawable/ic_alert"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alert_dialog_icon_margin_bottom"
                android:textColor="?attr/appTextPrimary"
                android:textSize="@dimen/alert_dialog_title_text_size"
                android:gravity="center"
                android:includeFontPadding="false"
                style="@style/SemiBold"
                app:layout_constraintTop_toBottomOf="@id/iconImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Delete" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alert_dialog_title_margin_bottom"
                android:textColor="?attr/appTextSecondary"
                android:textSize="@dimen/alert_dialog_message_text_size"
                android:lineSpacingExtra="7sp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text=""
                style="@style/Regular"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/buttonSeparator"
                android:layout_width="@dimen/alert_dialog_separator_width"
                android:layout_height="0dp"
                android:background="?attr/appBorderDarkGray"
                android:layout_marginTop="@dimen/alert_dialog_message_margin_bottom"
                app:layout_constraintTop_toBottomOf="@id/messageTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/positiveButton"
                app:layout_constraintEnd_toStartOf="@id/negativeButton" />

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/alert_dialog_button_height"
                android:gravity="center"
                android:textColor="?attr/appTextPrimary"
                android:textSize="@dimen/alert_dialog_button_text_size"
                android:background="?attr/selectableItemBackground"
                android:includeFontPadding="false"
                style="@style/Regular"
                app:layout_constraintTop_toBottomOf="@id/messageTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/buttonSeparator"
                android:layout_marginTop="@dimen/alert_dialog_message_margin_bottom"
                android:layout_marginEnd="6dp"
                tools:text="Cancel" />

            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/alert_dialog_button_height"
                android:gravity="center"
                android:textColor="?attr/appRed"
                android:textSize="@dimen/alert_dialog_button_text_size"
                android:background="?attr/selectableItemBackground"
                android:includeFontPadding="false"
                style="@style/SemiBold"
                app:layout_constraintTop_toBottomOf="@id/messageTextView"
                app:layout_constraintStart_toEndOf="@id/buttonSeparator"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/alert_dialog_message_margin_bottom"
                android:layout_marginStart="6dp"
                tools:text="Delete" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>