<?xml version="1.0" encoding="utf-8"?>
<com.konami.ailens.navigation.TouchDispatcherLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:ignore="ContentDescription"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Map container at bottom-most layer -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Back button - positioned above map -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="@dimen/address_picker_back_button_size"
        android:layout_height="@dimen/address_picker_back_button_size"
        android:layout_marginStart="@dimen/address_picker_back_button_margin_left"
        android:layout_marginTop="@dimen/address_picker_back_button_margin_top"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_nav_back_map"
        android:visibility="gone"
        android:alpha="0"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.konami.ailens.main.CutCornerView
            android:id="@+id/cutCornerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:fillColor="?attr/appBackground"
            app:cutCorners="topLeft|topRight"
            app:cornerCut="@dimen/address_picker_corner_cut"
            app:borderColor="?appBorderDarkGray"
            app:borderWidth="@dimen/address_picker_border_width" />

        <ImageView
            android:id="@+id/grabImageView"
            android:layout_width="@dimen/address_picker_grab_width"
            android:layout_height="@dimen/address_picker_grab_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/address_picker_grab_margin_top"
            android:src="@drawable/favorite_grab_drawable" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/address_picker_padding_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/address_picker_padding_top">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/myLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/address_picker_edit_text_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                android:alpha="0">

                <ImageView
                    android:id="@+id/dot"
                    android:layout_width="@dimen/address_picker_dot_size"
                    android:layout_height="@dimen/address_picker_dot_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/myLocationTextLayout"
                    app:layout_constraintTop_toTopOf="@id/myLocationTextLayout"
                    app:layout_constraintBottom_toBottomOf="@id/myLocationTextLayout"
                    android:src="@drawable/ic_nav_dot" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/myLocationTextLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/address_picker_edit_text_margin_horizontal"
                    app:layout_constraintStart_toEndOf="@id/dot"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:boxCollapsedPaddingTop="0dp"
                    app:boxBackgroundMode="filled"
                    android:background="#00000000"
                    app:boxStrokeColor="@color/location_picker_edit_text_bg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/myLocationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:textColor="?attr/appTextPrimary"
                        android:text="@string/your_location"
                        android:padding="0dp"
                        android:layout_marginStart="@dimen/address_picker_edit_content_margin"
                        style="@style/Medium"
                        android:textColorHint="?attr/appTextPlaceholder"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/destinationLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/address_picker_edit_text_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/destinationIcon"
                    android:layout_width="@dimen/address_picker_dot_size"
                    android:layout_height="@dimen/address_picker_dot_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/destinationTextLayout"
                    app:layout_constraintTop_toTopOf="@id/destinationTextLayout"
                    app:layout_constraintBottom_toBottomOf="@id/destinationTextLayout"
                    android:src="@drawable/ic_map_pin" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/destinationTextLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/address_picker_edit_text_margin_horizontal"
                    app:layout_constraintStart_toEndOf="@id/destinationIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:boxCollapsedPaddingTop="0dp"
                    app:boxBackgroundMode="filled"
                    android:background="#00000000"
                    app:hintEnabled="false"
                    app:boxStrokeColor="@color/location_picker_edit_text_bg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/destinationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:textColor="?attr/appTextPrimary"
                        android:hint="@string/destination"
                        android:padding="0dp"
                        android:lines="1"
                        android:textCursorDrawable="@null"
                        android:layout_marginStart="@dimen/address_picker_edit_content_margin"
                        style="@style/Medium"
                        android:textColorHint="?attr/appTextPlaceholder"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favoriteRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/address_picker_favorite_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/destinationLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/address_picker_favorite_margin_top"
                android:layout_marginBottom="@dimen/address_picker_favorite_margin_bottom"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/autoCompleteRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/favoriteRecyclerView"
                app:layout_constraintBottom_toBottomOf="parent" />
            <LinearLayout
                android:id="@+id/transportLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/destinationLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/address_picker_transport_mode_margin_top"
                android:orientation="vertical"
                android:visibility="gone"
                android:alpha="0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/address_picker_nav_mode_layout_height"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <LinearLayout
                        android:id="@+id/walkingLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/address_picker_nav_mode_padding_horizontal"
                        android:paddingVertical="@dimen/address_picker_nav_mode_padding_vertical">

                        <ImageView
                            android:id="@+id/walkingImageView"
                            android:layout_width="@dimen/address_picker_nav_mode_icon_size"
                            android:layout_height="@dimen/address_picker_nav_mode_icon_size"
                            android:src="@drawable/ic_nav_walking_active" />

                        <TextView
                            android:id="@+id/walkingTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/address_picker_nav_mode_text_margin_left"
                            android:text="Walking"
                            android:textColor="?attr/appPrimary"
                            android:textSize="@dimen/address_picker_nav_mode_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/motorcycleLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@id/walkingLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/address_picker_nav_mode_padding_horizontal"
                        android:paddingVertical="@dimen/address_picker_nav_mode_padding_vertical">

                        <ImageView
                            android:id="@+id/motorcycleImageView"
                            android:layout_width="@dimen/address_picker_nav_mode_icon_size"
                            android:layout_height="@dimen/address_picker_nav_mode_icon_size"
                            android:src="@drawable/ic_nav_motorcycle_inactive" />

                        <TextView
                            android:id="@+id/motorcycleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/address_picker_nav_mode_text_margin_left"
                            android:text="Motorcycle"
                            android:textColor="?attr/appTextPlaceholder"
                            android:textSize="@dimen/address_picker_nav_mode_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/drivingLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@id/motorcycleLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/address_picker_nav_mode_padding_horizontal"
                        android:paddingVertical="@dimen/address_picker_nav_mode_padding_vertical">

                        <ImageView
                            android:id="@+id/drivingImageView"
                            android:layout_width="@dimen/address_picker_nav_mode_icon_size"
                            android:layout_height="@dimen/address_picker_nav_mode_icon_size"
                            android:src="@drawable/ic_nav_driving_inactive" />

                        <TextView
                            android:id="@+id/drivingTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/address_picker_nav_mode_text_margin_left"
                            android:text="Driving"
                            android:textColor="?attr/appTextPlaceholder"
                            android:textSize="@dimen/address_picker_nav_mode_text_size" />
                    </LinearLayout>

                    <View
                        android:id="@+id/indicatorView"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="?attr/appPrimary"
                        app:layout_constraintStart_toStartOf="@id/walkingLayout"
                        app:layout_constraintEnd_toEndOf="@id/walkingLayout"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/address_picker_time_time_height"
                    android:layout_marginTop="@dimen/address_picker_time_margin_top"
                    android:textColor="?attr/appTextPrimary"
                    android:text="1 hr 15 min (8km)"
                    android:textSize="24sp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/address_picker_time_start_button_height"
                    android:layout_marginBottom="@dimen/address_picker_stat_button_margin_bottom"
                    android:layout_marginTop="@dimen/address_picker_stat_button_margin_top">

                    <com.konami.ailens.main.CutCornerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cutCorners="topLeft|topRight|bottomLeft|bottomRight"
                        app:cornerCut="@dimen/address_picker_stat_button_corner_cut"
                        app:fillColor="?attr/appPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:textColor="?attr/appTextButton"
                        android:text="Start"
                        style="@style/Bold"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/startButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000" />
                </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.konami.ailens.navigation.TouchDispatcherLayout>
