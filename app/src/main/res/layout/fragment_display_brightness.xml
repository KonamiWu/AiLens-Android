<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/navBgImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1500:874"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_nav_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_height"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="@dimen/nav_back_button_size"
                android:layout_height="@dimen/nav_back_button_size"
                android:src="@drawable/ic_nav_back"
                android:background="#00000000"
                android:contentDescription="@string/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_brightness"
                android:textColor="?attr/appTextPrimary"
                android:textSize="@dimen/nav_title_text_size"
                style="@style/SemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigationBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/display_brightness_margin_top"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/display_brightness_padding_horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/display_brightness_item_padding_horizontal">

                <TextView
                    android:id="@+id/automaticBrightnessTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/automaticBrightnessSwitch"
                    app:layout_constraintBottom_toBottomOf="@id/automaticBrightnessSwitch"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/display_brightness_item_title_text_size"
                    android:text="@string/display_brightness_automatic"
                    android:textColor="?attr/appTextPrimary"
                    android:includeFontPadding="false"
                    style="@style/Medium" />

                <com.konami.ailens.view.AnimatedSwitch
                    android:id="@+id/automaticBrightnessSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:checked="false"/>

                <SeekBar
                    android:id="@+id/brightnessSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/automaticBrightnessTitleTextView"
                    android:layout_marginTop="@dimen/setting_slider_margin_top"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@drawable/custom_slider_thumb"
                    android:progressDrawable="@drawable/custom_slider_track"
                    android:paddingStart="@dimen/setting_slider_padding_horizontal"
                    android:paddingEnd="@dimen/setting_slider_padding_horizontal"
                    android:layout_marginStart="@dimen/setting_slider_margin_horizontal"
                    android:layout_marginEnd="@dimen/setting_slider_margin_horizontal"
                    android:minHeight="@dimen/setting_slider_track_height"
                    android:maxHeight="@dimen/setting_slider_track_height"
                    android:splitTrack="false"
                    android:thumbOffset="0dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/appBorderDarkGray"
                android:layout_marginTop="@dimen/display_brightness_divider_margin_top"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/screenTimeoutItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:paddingHorizontal="@dimen/display_brightness_item_padding_horizontal"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/screenTimeoutTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/display_brightness_item_title_text_size"
                    android:text="@string/display_brightness_screen_timeout"
                    android:textColor="?attr/appTextPrimary"
                    android:includeFontPadding="false"
                    style="@style/Medium" />

                <TextView
                    android:id="@+id/screenTimeoutValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/screenTimeoutTitleTextView"
                    android:layout_marginTop="@dimen/display_brightness_item_value_margin_top"
                    android:textColor="?attr/appTextSecondary"
                    android:textSize="@dimen/display_brightness_item_value_text_size"
                    android:includeFontPadding="false"
                    style="@style/Regular" />

                <ImageView
                    android:layout_width="@dimen/setting_next_arrow_size"
                    android:layout_height="@dimen/setting_next_arrow_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_setting_next_arrow"
                    android:layout_marginStart="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
