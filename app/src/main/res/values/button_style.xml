<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BigPrimaryButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/big_bottom_button_height</item>
        <item name="android:layout_marginHorizontal">@dimen/big_bottom_button_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/big_bottom_button_margin_bottom</item>
    </style>

    <style name="BigPrimaryButtonCutCorner">
        <item name="cornerCut">@dimen/big_bottom_button_corner_cut</item>
        <item name="borderColor">#00000000</item>
        <item name="fillColor">?attr/appPrimary</item>
    </style>

    <style name="BigPrimaryButtonText" parent="Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/big_bottom_button_text_size</item>
        <item name="android:textColor">?attr/appTextButton</item>
    </style>

</resources>