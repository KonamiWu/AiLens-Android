<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CutCornerView">
        <attr name="cornerCut" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="fillColor" format="color"/>
        <attr name="fillColorAlpha" format="float"/>
        <attr name="cutCorners" format="flags">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
        </attr>
        <attr name="cornerStyle" format="enum">
            <enum name="bevel" value="0" />
            <enum name="round" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DashedLineView">
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashSpacing" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="dotSize" format="dimension" />
        <attr name="dotSpacing" format="dimension" />
        <attr name="dotColor" format="color" />
        <attr name="waveBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CutCornerButton">
        <attr name="cornerCut" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="fillColor" />
        <attr name="fillColorAlpha" />
        <attr name="pressColor" format="color"/>
        <attr name="disableFillColor" format="color"/>
        <attr name="disableTextColor" format="color"/>
        <attr name="cutCorners" />
        <attr name="cornerStyle" />
    </declare-styleable>

    <attr name="appPrimary" format="color" />
    <attr name="appPrimaryDark" format="color" />
    <attr name="appBackground" format="color" />
    <attr name="appSurface1" format="color" />
    <attr name="appBorderLightGray" format="color" />
    <attr name="appBorderMediumGray" format="color" />
    <attr name="appBorderDarkGray" format="color" />
    <attr name="appTextPrimary" format="color" />
    <attr name="appTextSecondary" format="color" />
    <attr name="appTextCaption" format="color" />
    <attr name="appTextButton" format="color" />
    <attr name="appTextPlaceholder" format="color" />
    <attr name="appTextDisable" format="color" />
    <attr name="appButtonDisable" format="color" />
    <attr name="appIconDark" format="color" />
    <attr name="appWhite" format="color" />
    <attr name="appRed" format="color" />
    <attr name="appGrey01" format="color" />
    <attr name="appGrey02" format="color" />

    <declare-styleable name="GlowView">
        <attr name="glowBaseColor" format="color" />
        <attr name="glowCenterAlpha" format="float" />
        <attr name="glowEdgeAlpha" format="float" />
        <attr name="glowCenterXNorm" format="float" />
        <attr name="glowCenterYNorm" format="float" />
        <attr name="glowRadiusFactor" format="float" />
        <attr name="glowFigmaLayerWidthPx" format="dimension" />
        <attr name="glowFigmaBlurPx" format="dimension" />
        <attr name="glowBlurEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BlurBorderView">
        <attr name="blurCornerRadius" format="dimension" />
        <attr name="blurFillColor" format="color" />
        <attr name="blurFillAlpha" format="float" />
        <attr name="blurInnerShadowColor" format="color" />
        <attr name="blurInnerShadowAlpha" format="float" />
        <attr name="blurInnerShadowOffsetX" format="dimension" />
        <attr name="blurInnerShadowOffsetY" format="dimension" />
        <attr name="blurInnerShadowBlur" format="dimension" />
        <attr name="blurStrokeWidth" format="dimension" />
        <attr name="blurStrokeColor" format="color" />
        <attr name="blurStrokeStartAlpha" format="float" />
        <attr name="blurStrokeEndAlpha" format="float" />
        <attr name="blurBackgroundRadius" format="dimension" />
        <attr name="blurDownsample" format="float" />
        <attr name="blurUpdateInterval" format="integer" />
    </declare-styleable>
</resources>